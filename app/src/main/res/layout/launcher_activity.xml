<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/launcher_application_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_application_logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/launcher_welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/alert_text_size"
            android:textStyle="bold"
            tools:text="Welcome, User !" />

    </FrameLayout>
</layout>