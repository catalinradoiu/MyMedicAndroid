<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.catalin.mymedic.feature.authentication.RegistrationViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/secondary_margin"
                android:paddingTop="@dimen/registration_root_top_margin">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/first_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/secondary_margin"
                    android:layout_marginStart="@dimen/secondary_margin"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/first_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="@dimen/primary_margin"
                        android:drawableStart="@drawable/ic_person_24dp"
                        android:hint="@string/first_name"
                        android:inputType="text"
                        android:lines="1"
                        android:text="@={viewModel.firstName}"
                        app:drawableTint="@{@color/light_gray}" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/last_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/secondary_margin"
                    android:layout_marginStart="@dimen/secondary_margin"
                    app:errorEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/first_name_layout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/last_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="@dimen/primary_margin"
                        android:drawableStart="@drawable/ic_person_24dp"
                        android:hint="@string/last_name"
                        android:inputType="text"
                        android:lines="1"
                        android:text="@={viewModel.lastName}"
                        app:drawableTint="@{@color/light_gray}" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/secondary_margin"
                    android:layout_marginStart="@dimen/secondary_margin"
                    app:errorEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/last_name_layout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="@dimen/primary_margin"
                        android:drawableStart="@drawable/ic_mail_24dp"
                        android:hint="@string/email_address"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:text="@={viewModel.email}"
                        app:drawableTint="@{@color/light_gray}" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/secondary_margin"
                    android:layout_marginStart="@dimen/secondary_margin"
                    app:errorEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/email_layout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/password_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="@dimen/primary_margin"
                        android:drawableStart="@drawable/ic_key_24dp"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:text="@={viewModel.password}"
                        app:drawableTint="@{@color/light_gray}" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/password_confirmation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/secondary_margin"
                    android:layout_marginStart="@dimen/secondary_margin"
                    app:errorEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/password_layout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/password_confirmation_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="@dimen/primary_margin"
                        android:drawableStart="@drawable/ic_key_24dp"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:text="@={viewModel.passwordConfirmation}"
                        app:drawableTint="@{@color/light_gray}" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/birth_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/secondary_margin"
                    android:layout_marginStart="@dimen/secondary_margin"
                    app:errorEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/password_confirmation_layout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/birth_date_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="@dimen/primary_margin"
                        android:drawableStart="@drawable/ic_date_range_24dp"
                        android:hint="@string/birth_date"
                        android:lines="1"
                        app:drawableTint="@{@color/light_gray}"
                        app:longDate="@{viewModel.birthDate}" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/gender_image"
                    android:layout_width="@dimen/drawable_primary_width"
                    android:layout_height="@dimen/drawable_primary_height"
                    android:layout_marginStart="@dimen/secondary_margin"
                    android:src="@drawable/ic_gender_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birth_date_layout"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/primary_margin"
                    android:text="@string/gender"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/gender_image"
                    app:layout_constraintTop_toBottomOf="@id/birth_date_layout" />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/primary_margin"
                    app:layout_constraintBottom_toBottomOf="@id/gender_text"
                    app:layout_constraintStart_toEndOf="@id/gender_text"
                    app:layout_constraintTop_toBottomOf="@id/birth_date_layout"
                    app:layout_constraintTop_toTopOf="@id/gender_text" />

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/secondary_margin"
                    android:layout_marginStart="@dimen/secondary_margin"
                    android:layout_marginTop="@dimen/primary_margin"
                    android:background="@color/colorAccent"
                    android:onClick="@{() -> viewModel.registerUser()}"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/gender_spinner" />

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>
